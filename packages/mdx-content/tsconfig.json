{
  "compilerOptions": {
      "module": "ES2020",
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "incremental": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ES2020", "DOM"],
      "moduleResolution": "node",
      "preserveSymlinks": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noErrorTruncation": true,
      "resolveJsonModule": true,
      "target": "ES2020",
      "baseUrl": ".",
      "outDir": "dist",
      "rootDir": "src",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
      "src/**/*"
  ]
}
